{
  "name": "expressjs-starter",
  "version": "1.0.0",
  "description": "A starter project for the expressjs backend with mongodb",
  "main": "build/index.js",
  "scripts": {
    "mongo": "mongod --dbpath ./.mongodb",
    "test:cucumber": "./node_modules/.bin/cucumber-js --require __test__/steps --require __test__/hooks.js __test__",
    "test": "ENV=test mocha -r ts-node/register __test__/**/*.test.ts",
    "clean": "rimraf build/*",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "build": "npm-run-all clean lint tsc",
    "dev": "nodemon src/index.ts",
    "start": "node .",
    "format": "prettier --write 'src/**/*.{ts,tsx}'"
  },
  "engines": {
    "node": ">=8.9.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nextkit/expressjs-starter.git"
  },
  "keywords": [
    "starter",
    "expressjs",
    "nodejs",
    "backend"
  ],
  "author": "NextKit",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nextkit/expressjs-starter/issues"
  },
  "homepage": "https://github.com/nextkit/expressjs-starter#readme",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "express-pino-logger": "^4.0.0",
    "express-validator": "^6.2.0",
    "helmet": "^3.15.1",
    "jsonwebtoken": "^8.4.0",
    "moment": "^2.24.0",
    "mongoose": "^5.4.11",
    "node-cache": "^5.0.0",
    "nodemailer": "^6.3.1",
    "pino": "^5.13.5",
    "randomstring": "^1.1.5",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/express-jwt": "0.0.42",
    "@types/express-pino-logger": "^4.0.2",
    "@types/express-validator": "^3.0.0",
    "@types/helmet": "^0.0.44",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/mocha": "^7.0.2",
    "@types/mongoose": "^5.5.23",
    "@types/node": "^12.11.6",
    "@types/nodemailer": "^6.2.2",
    "@types/pino": "^5.8.12",
    "axios": "^0.19.0",
    "chai": "^4.2.0",
    "cucumber": "^6.0.5",
    "husky": "^3.0.9",
    "mocha": "^7.2.0",
    "mongodb": "^3.3.5",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^3.2.2",
    "pino-tee": "^0.2.2",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "should": "^13.2.3",
    "supertest": "^4.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.20.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all format lint"
    }
  }
}
